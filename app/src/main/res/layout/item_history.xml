<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:id="@+id/rootRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- HEADER ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Thumbnail -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivScan"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/cd_history_thumbnail"
                app:shapeAppearanceOverlay="@style/Shape.Round12" />

            <!-- Texts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Benign"
                    style="@style/Widget.Material3.Chip.Assist.Elevated" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Sep 24, 2025"
                    android:textAppearance="?attr/textAppearanceBodySmall" />

                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Looks fine, monitor"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />
            </LinearLayout>

            <!-- Expand button -->
            <ImageButton
                android:id="@+id/btnExpand"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:contentDescription="@string/cd_expand"
                style="?attr/borderlessButtonStyle"
                app:srcCompat="@drawable/ic_expand_more" />
        </LinearLayout>

        <!-- EXPANDABLE SECTION -->
        <LinearLayout
            android:id="@+id/expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:visibility="gone">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivCropped"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/cd_cropped_area"
                app:shapeAppearanceOverlay="@style/Shape.Round12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingTop="10dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:text="@string/edit_notes" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                    android:text="@string/delete"
                    app:backgroundTint="?attr/colorErrorContainer"
                    app:iconTint="?attr/colorOnErrorContainer"
                    android:textColor="?attr/colorOnErrorContainer" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
