<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ================= HEADER ================= -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/bg_flat_header"
            android:gravity="center_horizontal"
            android:paddingBottom="24dp">

            <!-- TITLE PROFILE -->
            <TextView
                android:id="@+id/tv_profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/profile_title"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp" />

            <!-- Avatar -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar_main"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:src="@drawable/ic_person_grey"
                app:civ_border_width="3dp"
                app:civ_border_color="@android:color/white"
                android:scaleType="centerCrop"
                android:contentDescription="@string/profile_avatar_title" />

            <!-- Tombol Edit Avatar -->
            <ImageButton
                android:id="@+id/btn_edit_avatar_main"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@id/img_avatar_main"
                android:layout_alignBottom="@id/img_avatar_main"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_circle_primary"
                android:src="@drawable/camera"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:contentDescription="@string/edit_avatar"
                app:tint="@null"
                android:elevation="8dp" />

            <!-- Nama -->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_avatar_main"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="@string/dummy_user"
                android:fontFamily="@font/inter_bold"
                android:textSize="20sp"
                android:textColor="@android:color/white" />

            <!-- Nomor HP -->
            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/dummy_number"
                android:fontFamily="@font/inter_medium"
                android:textSize="14sp"
                android:textColor="@android:color/white" />

            <!-- ======= LABELS + VALUES (EMAIL | AGE | SCORE) ======= -->
            <LinearLayout
                android:id="@+id/info_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mobile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- ==== Email Column ==== -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_holder"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp"
                        android:textColor="#B3FFFFFF" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_email"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="28dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@android:color/white" />

                <!-- ==== Age Column ==== -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/age_title"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp"
                        android:textColor="#B3FFFFFF" />

                    <TextView
                        android:id="@+id/tv_age_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_age"
                        android:fontFamily="@font/inter_bold"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="28dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@android:color/white" />

                <!-- ==== Score Column ==== -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_title"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp"
                        android:textColor="#B3FFFFFF" />

                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_score"
                        android:fontFamily="@font/inter_bold"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_row"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="@string/edit_profile"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:backgroundTint="@android:color/white"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:elevation="6dp" />
        </RelativeLayout>

        <!-- ================= LOWER SECTION ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_top_white"
            android:paddingTop="24dp"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="-10dp">

            <!-- Total Scans -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_total_scans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_scan_dummy"
                        android:fontFamily="@font/inter_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_scans"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Detected Categories -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detected_categories"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/tv_benign_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Benign: 0"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_neutral_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Neutral: 0"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_suspicious_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suspicious: 0"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_malignant_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Malignant: 0"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Member Since -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_member_since_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_date"
                        android:fontFamily="@font/inter_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/member_since"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Overall Skin Score -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_overall_skin_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_overall"
                        android:fontFamily="@font/inter_bold"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp" />

                    <ProgressBar
                        android:id="@+id/skin_score_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="10dp"
                        android:progress="92"
                        android:max="100"
                        android:progressTint="@color/medium_sky_blue"
                        android:backgroundTint="@color/progress_bg_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/overall_skin_score"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- BOTTOM BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_top_white"
            android:paddingTop="24dp"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="-10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/medium_sky_blue"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:id="@+id/btn_delete_account"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_account"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/danger_red"
                    style="@style/Widget.MaterialComponents.Button" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
