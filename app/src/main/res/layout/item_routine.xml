<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_routine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="#FAFAFA"
    android:clipToPadding="false"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="10">

        <!-- Left decorative icon -->

        <!-- Text container -->

        <ImageView
            android:id="@+id/img_routine_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#4DA9F0"
            android:contentDescription="Routine Icon"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:src="@drawable/ic_sun" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_routine_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply Sunscreen"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/poppins_semibold"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tv_routine_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00 AM"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Action buttons container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:layout_marginEnd="13.5dp">

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_edit"
                android:contentDescription="Edit Routine"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="20dp"
                app:tint="@android:color/black"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_delete"
                android:contentDescription="Delete Routine"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="8dp"
                app:tint="@android:color/black"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
