<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/nested_scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F9FAFB"
    android:clipToPadding="false"
    android:paddingBottom="56dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Morning, Darryl!"
            android:textSize="26sp"
            android:textColor="#111827"
            android:fontFamily="@font/inter_bold"/>

        <!-- CAROUSEL: ViewPager2 (1/3 of screen + a little more) -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_carousel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>


        <!-- Skin Health Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- Left circular progress with overlay -->
                <FrameLayout
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center">

                    <!-- Circular Progress -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/cp_skin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:indicatorSize="150dp"
                        app:trackThickness="12dp"
                        android:indeterminate="false"
                        android:progress="0"
                        app:indicatorColor="#3478F6"/>

                    <!-- Overlay texts -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Score -->
                        <TextView
                            android:id="@+id/tv_skin_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/inter_bold"
                            android:textColor="#111827"/>

                        <!-- Affirmation -->
                        <TextView
                            android:id="@+id/tv_skin_affirmation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Keep it up!"
                            android:textSize="12sp"
                            android:textColor="#4DA9F0"
                            android:fontFamily="@font/inter"/>
                    </LinearLayout>
                </FrameLayout>

                <!-- Right side: live environment data -->
                <!-- Right side: live environment data -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp">

                    <!-- UV Index -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_sunny"/>

                            <TextView
                                android:id="@+id/tv_uv_index"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UV: 98 (High)"
                                android:layout_marginStart="8dp"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/pb_uv"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="20"
                            android:max="11"
                            android:progressTint="#FFC107"
                            android:backgroundTint="#E0E0E0"/>
                    </LinearLayout>

                    <!-- Humidity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_water_drop"/>

                            <TextView
                                android:id="@+id/tv_humidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Humidity: 45%"
                                android:layout_marginStart="8dp"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/pb_humidity"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="45"
                            android:max="100"
                            android:progressTint="#2196F3"
                            android:backgroundTint="#E0E0E0"/>
                    </LinearLayout>

                    <!-- Pollution (AQI) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_cloud"/>

                            <TextView
                                android:id="@+id/tv_pollution"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AQI: 18 (Low)"
                                android:layout_marginStart="8dp"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/pb_pollution"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="72"
                            android:max="500"
                            android:progressTint="#4CAF50"
                            android:backgroundTint="#E0E0E0"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ... rest of your layout unchanged (appointments/prescriptions/reports/tip card/recycler) -->
        <!-- Tip of the Day -->
        <TextView
            android:id="@+id/tv_tip_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_of_day"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_tip_header"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Tip Icon -->
                <ImageView
                    android:id="@+id/iv_tip_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lightbulb"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"/>

                <!-- Tip Text -->
                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="90% of skin aging is caused by sun exposure â€” wear sunscreen daily."
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#374151"
                    android:fontFamily="@font/inter_medium"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- My Routine header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_routine"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#111827"
                android:fontFamily="@font/inter_bold"/>

            <ImageButton
                android:id="@+id/btn_add_routine"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_input_add"
                app:tint="#3478F6"
                android:contentDescription="@string/add_routine"/>
        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_routines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <!-- Product Cards-->
        <!-- Product Grid -->
        <TextView
            android:id="@+id/tv_product_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skincare Products"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
